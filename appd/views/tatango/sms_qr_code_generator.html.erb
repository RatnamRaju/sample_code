					<style type="text/css">
						div.generate-leftBox { width:278px;float:left;position:relative;overflow:hidden;padding:0 }
						div.generate-rightBox { width:300px;float:right;position:relative;overflow:hidden;padding:0 }
							
							div.wide-content div.wide-content-tour.clients div.generate-rightBox p.semibold { float:left;color:#333;display:block;font-family:'MyriadProSemibold';font-size:15px;padding:0 }

							div.generate-leftBox p.red-txt { padding-top:15px;font-family: 'MyriadWebCondensed';color:#333;font-size:15px;width:100%; }

							div.generate-codeBox { width:256px;padding:10px;margin-top:5px;position:relative;overflow:hidden;background:#fff;border:1px solid #ba3b11;-webkit-border-radius:5px;-moz-border-radius:5px;border-radius:5px; }
								div.generate-codeBox p { font-size:15px;padding:0;}
								div.generate-codeBox p code { font-family:'MyriadWebCondensed'; }
								
							div.generateQR-form { width:278px;position:relative;overflow:hidden;padding:0 0 20px 0;margin:0;background:url('<%= asset_path 'line-1px.gif' %>') repeat-x 0 bottom; }
									
								div.generateQR-form form { position:relative; }
										
									div.generateQR-form form div.box { position:relative;float:left;overflow:hidden;width:278px;padding:0 0 7px 0; }

										div.generateQR-form form label { float:left;color:#333;width:278px;display:block;font-family:'MyriadProSemibold';font-size:15px;line-height:20px;height:20px;padding:0 0 5px 0; }
										div.generateQR-form form input { float:left;border:none;width:70px;padding:0 0 0 10px;line-height:32px;height:32px;font-size:15px;color:#545454;margin:0;font-family:'MyriadWebCondensed';background:url('<%= asset_path 'form-input.png' %>') no-repeat 0 0; }
										
										div.generateQR-form form input.longer { width:261px; }

										div.generateQR-form form input:focus { color:#333; }
										div.generateQR-form form span.end { float:left;display:block;width:7px;height:32px;margin:0;background:url('<%= asset_path 'form-input.png' %>') no-repeat right 0; }
											
											div.generateQR-form form input.generate { background:url('<%= asset_path 'generQRcode.png' %>') no-repeat 0 0;border:none;color:#fff;font-family:'MyriadProSemibold';display:block;font-size:20px;text-shadow: #666 0px 1px 2px;width:200px;height:45px;line-height:40px;padding:0 0 4px 0;margin:30px 0 0 0;text-align:center;float:left;cursor:pointer; }
											div.generateQR-form form input.generate:hover { background:url('<%= asset_path 'generQRcode.png' %>') no-repeat 0 -45px; }
											

