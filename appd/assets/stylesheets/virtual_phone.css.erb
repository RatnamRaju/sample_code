form { margin: 9px; }

#helpers { float: right; }

#helpers .orange_button { clear: none; margin-left: 2em; }

#phones .phone { margin: 9px; /*	height: 250px;*/ height: auto; width: 240px; float: left; border: 1px solid black; }

.phone h3 { background-color: #05B; color: #eee; margin: 0 0 5px; padding: 3px; }

.phone h4 { margin: 0; padding: 5px; background-color: #ccc; }

.phone ul { overflow: auto; height: 150px; margin: 0; padding-left: 20px; list-style-type: disc; font: 11px 'Courier New', monotype; }

.header_link { color: #eee !important; float: right; font-size: 10px; }

.phone h4 .header_link { color: #22222C; }

.status { min-height: 1em; background-color: #ccc; padding: 3px; }

.status a { display: block; float: right; }

.polling { background-color: #E2F2C2; }

.stopped { background-color: #FFDECC; }

#sparrow_warning{ background-color: #FFDECC; border: 1px solid #D14414; padding: 1em; }